<!DOCTYPE html>
<html>

<head>
    <title>oj</title>
    <link href="http://cdn.staticfile.org/twitter-bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="http://ajax.useso.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://cdn.staticfile.org/twitter-bootstrap/4.0.0-alpha.2/js/bootstrap.min.js"></script>
    <link href='http://fonts.useso.com/css?family=Jura' rel='stylesheet' type='text/css'>
</head>

<body>
    <nav class="navbar navbar-light bg-faded">
        <div class="container">
            <a class="navbar-brand" href="/">Brand</a>
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/status">Status <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contests">Contest</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-toggle" data-toggle="collapse" data-target="#exCollapsingNavbar"><i class="fa fa-search"></i></a>
                </li>
            </ul>
            <ul class="nav navbar-nav pull-xs-right">
              {{if not .Islogin}}
                <li class="nav-item">
                    <div class="dropdown">
                      <a class="nav-link dropdown-toggle" id="accountDropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user"></i>  </a>
                        <div class="dropdown-menu" aria-labelledby="accountDropdownMenu" style="padding:10px;right:0;left:auto;">
                          <div id="login">
                            <form action="/signin" method="post" accept-charset="UTF-8">
                              <input name="loginUsername" class="form-control" style="margin-bottom: 10px;" type="text" placeholder="Username"/>
                              <input name="loginPassword" class="form-control" style="margin-bottom: 10px;" type="password" placeholder="Password" />
                              <!-- <div class="checkbox">
                                  <label>
                                    <input type="checkbox"> Remember me
                                  </label>
                              </div> -->
                              <input class="btn btn-primary" style="margin-bottom: 10px;clear: left; width: 100%; height: 32px; font-size: 13px;" type="submit" name="commit" value="Sign In" />
                            </form>
                            <a href="#" class="pull-xs-left"><small>Forget password?</small></a>
                            <a href="#" class="pull-xs-right" data-toggle="modal" data-target="#createAccountModal"><small>Create account</small></a>
                          </div>
                        </div>
                    </div>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link" href="/signout"><i class="fa fa-sign-out"></i></a>
                </li>
                {{end}}
            </ul>
        </div>
    </nav>

    <div class="collapse" id="exCollapsingNavbar">
        <div class="container p-a-1">
            <form class="form-inline">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                              <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


    {{ yield }}
    <footer class="footer">
        <div class="container">
            <p class="text-muted">@2015 Team Aetema reserved.</p>
        </div>
    </footer>

    <div id="createAccountModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Sign up</h4>
                </div>
                <div class="modal-body">
                    <form id="createaccountform">
                        <input type="text" name="createUsername" class="form-control" placeholder="username">
                        <input type="password" name="createPassword" class="form-control" placeholder="password">
                        <input type="password" name="repeatePassword" class="form-control" placeholder="repeate password">
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <input type="submit" id="submitAccountInfo" data-dismiss="modal" class="btn btn-primary" value="Create">
                </div>
            </div>
        </div>
    </div>
    <script>
    $(document).ready(function () {
    $("input#submitAccountInfo").click(function () {
      var errorMessage = '',
          username = $('form#createaccountform input[name=createUsername]').val(),
          password = $('form#createaccountform input[name=createPassword]').val(),
          repeatePassword = $('form#createaccountform input[name=repeatePassword]').val();
      if (username.length<6||username.length>12) {
        errorMessage += " 用户名应当在[6,11]之间";
      }
      if (password.length<7||password.length>13){
        errorMessage += " 密码应当在[7,12]之间"
      }
      if (password !== repeatePassword){
        errorMessage += " 两次密码不一致";
      }
      if (errorMessage !== ''){
        $('nav.navbar').after('<div class="alert alert-danger alert-dismissible fade in" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> <strong>注册失败!</strong>'+errorMessage+'.</div>');
      }else{
        $.ajax({
            type: "POST",
            url: "/signup",
            data: $('form#createaccountform').serialize(),
            success: function (msg) {
            //  window.location.href = "/"
            },
            error: function () {
                //alert("failure");
            }
        });
      }
    });
    });
    </script>
</body>
</html>
