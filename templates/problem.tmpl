<br>
<div class="container">
  {{with .Problem}}
    <h5>{{.Title}}</h5>
    <small><mark>{{.Time}}sec</mark></small>
    <small><mark> {{.Memory}}m</mark></small>
    <hr>
    <h6>Description</h6>
    <pre>{{.Description}}</pre>
    <h6>Sample input</h6>
    <hr>
    <pre>{{.SampleInput}}</pre>
    <h6>Sample output</h6>
    <hr>
    <pre>{{.SampleOutput}}</pre>
    {{if $.Islogin}}
    <form method="post" action="/problem/submit?id={{.ID}}">
      <h6>Code &nbsp;
      <select class="c-select" name="lang">
        <option selected>C++</option>
        <option>C</option>
        <option>Java</option>
        <option>Python</option>
      </select>
      </h6>
      <textarea class="form-control" name="submitedCode" rows="3">Paste code here.</textarea>
      <br>
      <input type="submit" class="btn btn-default" value="Submit">
    </form>
    {{end}}
    <br>
</div>
{{end}}
</div>
